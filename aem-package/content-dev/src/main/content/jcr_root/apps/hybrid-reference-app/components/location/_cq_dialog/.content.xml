<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Location"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"/>
                <items jcr:primaryType="nt:unstructured">
                    <location
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Location"
                        sling:orderBefore="basic"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <details
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Location Data"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <locationPath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldDescription="Path containing location data"
                                                fieldLabel="Location Path"
                                                name="./location"
                                                placeholder="/etc/hybrid-reference-app/locationdata"
                                                predicate="nosystem"
                                                required="{Boolean}true"
                                                rootPath="/etc/hybrid-reference-app"/>
                                            <master
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                name="./master"
                                                text="Indicate as a master location"
                                                value="false"/>
                                        </items>
                                    </details>
                                    <images
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Location Images"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imgUrl1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="Card Image 1"
                                                name="./cards/img1/fileReference"
                                                rootPath="/content/dam/mobileapps/hybrid-reference-app/page-images/locations"/>
                                            <imgUrl2
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="Card Image 2"
                                                name="./cards/img2/fileReference"
                                                rootPath="/content/dam/mobileapps/hybrid-reference-app/page-images/locations"/>
                                            <imgUrl3
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="Card Image 3"
                                                name="./cards/img3/fileReference"
                                                rootPath="/content/dam/mobileapps/hybrid-reference-app/page-images/locations"/>
                                        </items>
                                    </images>
                                </items>
                            </column>
                        </items>
                    </location>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
